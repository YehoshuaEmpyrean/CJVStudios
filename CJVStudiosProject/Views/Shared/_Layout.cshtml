<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - CJVStudiosProject</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CJVStudiosProject.styles.css" asp-append-version="true" />

    <style>
        .carousel-inner {
            max-height: 55rem;
        }

        .bg-dark2 {
            background-color: #000000;
        }

        .head1 {
            height: 100px;
        }
    </style>

    <!-- Bootstrap 5  JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="bg-dark2">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">CJV STUDIOS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Portfolio">Portfolio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">FAQS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://blinq.me/SuHl2HEQHvnO" target="_blank">Contact</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        @*<a class="nav-link" href="#">About</a>*@
                        <a class="nav-link" asp-controller="Home" asp-action="Search">Search</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
<footer class="py-3 bg-dark">
    <ul class="nav justify-content-center border-bottom border-secondary bg-dark pb-3">
        <li class="nav-item"><a class="nav-link px-2 text-muted" asp-controller="Home" asp-action="Index">CJV STUDIOS</a></li>
        <li class="nav-item"><a class="nav-link px-2 text-muted" asp-controller="Home" asp-action="Portfolio">Portfolio</a></li>
        <li class="nav-item"><a class="nav-link px-2 text-muted" href="#">FAQs</a></li>
        <li class="nav-item"><a class="nav-link px-2 text-muted" href="#">Pricing</a></li>
        <li class="nav-item"><a class="nav-link px-2 text-muted" href="https://blinq.me/SuHl2HEQHvnO" target="_blank">Contact</a></li>
        <li class="nav-item"><a class="nav-link px-2 text-muted" href="#">About</a></li>
    </ul>
    <p class="text-center text-muted mt-3">© 2023 Company, Inc</p>
</footer>

@await RenderSectionAsync("Scripts", required: false)
</html>
